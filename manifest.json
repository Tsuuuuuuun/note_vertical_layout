{
    "manifest_version": 3,
    "name": "note縦読みトグル",
    "version": "0.1.0",
    "description": "note の記事本文をワンクリックで縦書き表示に切り替える拡張。",
    "permissions": [],
    "host_permissions": [
      "https://note.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://note.com/*/n/*"
        ],
        "js": [
          "amd-loader.js",
          "content_script.js",
          "bootstrap.js"
        ],
        "css": [
          "css/styles.css"
        ],
        "run_at": "document_idle"
      }
    ]
  }
  
